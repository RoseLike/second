<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RadioGroup
        android:id="@+id/new_radiogroupId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/new1_radiobuttonId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="精选"
            android:textSize="25sp"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/new2_radiobuttonId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="器材"
            android:textSize="25sp"
            android:button="@null"

            />

        <RadioButton
            android:id="@+id/new3_radiobuttonId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="影响"
            android:textSize="25sp"
            android:button="@null" />

        <RadioButton
            android:id="@+id/new4_radiobuttonId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="学院"
            android:textSize="25sp"
            android:button="@null" />
    </RadioGroup>
    <View android:layout_width="120dp"
        android:layout_height="2dp"
        android:id="@+id/new_navigatioonId"
        android:background="#f00"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/new_viewpagerId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </RelativeLayout>
</LinearLayout>
